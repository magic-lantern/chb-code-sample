<div class="col-md-2 border">
  <ul class="nav nav-pills nav-stacked patientList">
    <li class="lead">Patient List</li>
    {{#each sortedPatients as |patient|}}
      <li role="presentation" id='li_{{patient.patientId}}'><i class="navcontent fa fa-check-circle-o" aria-hidden="true" id='check_{{patient.patientId}}' {{action "selectPatient" patient}}></i><a class="patientList" {{action "viewPatient" patient}}>{{patient.formatted_name}}</a></li>
    {{/each}}
  </ul>
</div>



